<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.flamingo.demoapi.DemoPreference app:key="component" />

    <EditTextPreference
        app:iconSpaceReserved="false"
        app:key="label"
        app:persistent="false"
        app:title="Label" />

    <SwitchPreferenceCompat
        app:iconSpaceReserved="false"
        app:key="selected"
        app:persistent="false"
        app:title="Selected" />

    <SwitchPreferenceCompat
        app:iconSpaceReserved="false"
        app:key="hasOnClick"
        app:persistent="false"
        app:title="Has onClick" />

    <SwitchPreferenceCompat
        app:iconSpaceReserved="false"
        app:key="hasOnDelete"
        app:persistent="false"
        app:title="Has onDelete" />

    <DropDownPreference
        app:iconSpaceReserved="false"
        app:key="variant"
        app:persistent="false"
        app:summary="%s"
        app:title="Variant" />

    <DropDownPreference
        app:iconSpaceReserved="false"
        app:key="color"
        app:persistent="false"
        app:summary="%s"
        app:title="Color" />

    <DropDownPreference
        app:iconSpaceReserved="false"
        app:key="icon"
        app:persistent="false"
        app:summary="%s"
        app:title="Icon" />

    <SwitchPreferenceCompat
        app:iconSpaceReserved="false"
        app:key="disabled"
        app:persistent="false"
        app:title="Disabled" />

</PreferenceScreen>