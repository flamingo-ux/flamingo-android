<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.flamingo.demoapi.DemoPreference app:key="component" />

    <SwitchPreferenceCompat
        app:iconSpaceReserved="false"
        app:key="hasOnClick"
        app:persistent="false"
        app:title="Has onClick" />

    <SwitchPreferenceCompat
        app:iconSpaceReserved="false"
        app:key="loading"
        app:persistent="false"
        app:title="Loading" />

    <EditTextPreference
        app:iconSpaceReserved="false"
        app:key="label"
        app:persistent="false"
        app:title="Label" />

    <DropDownPreference
        app:iconSpaceReserved="false"
        app:key="size"
        app:persistent="false"
        app:summary="%s"
        app:title="Size" />

    <DropDownPreference
        app:iconSpaceReserved="false"
        app:key="color"
        app:persistent="false"
        app:summary="%s"
        app:title="Color" />

    <DropDownPreference
        app:iconSpaceReserved="false"
        app:key="startIcon"
        app:persistent="false"
        app:summary="%s"
        app:title="Start icon" />

    <DropDownPreference
        app:iconSpaceReserved="false"
        app:key="endIcon"
        app:persistent="false"
        app:summary="%s"
        app:title="End Icon" />
</PreferenceScreen>