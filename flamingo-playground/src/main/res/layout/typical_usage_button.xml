<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.Flamingo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/empty_state_divider"
        android:orientation="vertical"
        android:padding="16dp"
        android:showDividers="middle">

        <com.flamingo.view.components.Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:ds_b_color="primary"
            app:ds_b_label="Button" />

        <com.flamingo.view.components.Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:ds_b_color="primary"
            app:ds_b_label="Button"
            app:ds_b_variant="text" />

        <com.flamingo.view.components.Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ds_b_color="primary"
            app:ds_b_label="Button" />

        <com.flamingo.view.components.Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ds_b_color="primary"
            app:ds_b_label="Button"
            app:ds_b_variant="text" />

        <com.flamingo.view.components.Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:ds_b_color="warning"
            app:ds_b_label="Button" />

        <com.flamingo.view.components.Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:ds_b_color="warning"
            app:ds_b_label="Button"
            app:ds_b_size="small" />

        <com.flamingo.view.components.Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:ds_b_color="error"
            app:ds_b_icon="@drawable/ds_ic_aperture"
            app:ds_b_label="Button" />

        <com.flamingo.view.components.Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:ds_b_color="error"
            app:ds_b_icon="@drawable/ds_ic_aperture"
            app:ds_b_label="Button"
            app:ds_b_loading="true" />

        <com.flamingo.view.components.Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:ds_b_color="error"
            app:ds_b_disabled="true"
            app:ds_b_icon="@drawable/ds_ic_aperture"
            app:ds_b_label="Button" />

        <com.flamingo.view.components.Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:ds_b_dropdown="expand"
            app:ds_b_label="Button"
            app:ds_b_variant="text" />

        <com.flamingo.view.components.Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:ds_b_dropdown="expand"
            app:ds_b_label="Button" />

        <TextView
            style="@style/TextStyle.Flamingo.Headline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/button_typical_usage_large_text_title" />

        <com.flamingo.view.components.Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:ds_b_color="primary"
            app:ds_b_label="ButtonButtonButtonButtonButtonButtonButtonButtonButtonButtonButtonButton "
            app:ds_b_singleLine="true" />

        <com.flamingo.view.components.Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:ds_b_color="primary"
            app:ds_b_label="ButtonButtonButtonButtonButtonButtonButtonButtonButtonButtonButtonButton " />

        <com.flamingo.view.components.Button
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            app:ds_b_color="primary"
            app:ds_b_label="ButtonButtonButtonButtonButtonButtonButtonButtonButtonButtonButtonButton" />

    </LinearLayout>
</ScrollView>