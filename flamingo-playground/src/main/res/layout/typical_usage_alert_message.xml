<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground"
    android:theme="@style/Theme.Flamingo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:padding="@dimen/x4">

        <com.flamingo.view.components.AlertMessage
            android:id="@+id/alert_success"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ds_message="@string/demo_alert_message"
            app:ds_variant="success" />

        <com.flamingo.view.components.AlertMessage
            android:id="@+id/alert_warning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x4"
            app:ds_message="@string/demo_alert_message"
            app:ds_variant="warning" />

        <com.flamingo.view.components.AlertMessage
            android:id="@+id/alert_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x4"
            app:ds_message="@string/demo_alert_message"
            app:ds_variant="info" />

        <com.flamingo.view.components.AlertMessage
            android:id="@+id/alert_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x4"
            app:ds_message="@string/demo_alert_message"
            app:ds_variant="error" />

        <com.flamingo.view.components.AlertMessage
            android:id="@+id/alert_custom_variant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x4"
            app:ds_message="@string/demo_alert_message"
            app:ds_variant="success" />

        <com.flamingo.view.components.AlertMessage
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x4"
            app:ds_message="@string/demo_alert_message"
            app:ds_variant="warning" />

        <com.flamingo.view.components.AlertMessage
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x4"
            app:ds_message="@string/demo_alert_message"
            app:ds_variant="info" />

        <com.flamingo.view.components.AlertMessage
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x4"
            app:ds_message="@string/demo_alert_message"
            app:ds_variant="error" />


    </LinearLayout>
</ScrollView>