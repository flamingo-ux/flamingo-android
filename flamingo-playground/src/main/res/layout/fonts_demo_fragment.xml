<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fonts_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground"
    android:theme="@style/Theme.Flamingo"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/x2"
        android:layout_marginTop="@dimen/x2"
        android:orientation="vertical">

        <TextView
            style="@style/TextStyle.Flamingo.Headline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:layout_marginStart="8dp"
            android:text="@string/design_demo_fonts_title" />

        <TextView
            style="@style/TextStyle.Flamingo.Subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="@string/fonts_demo_docs" />

        <Switch
            android:id="@+id/enabled_text_views_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Enabled text views" />

        <Switch
            android:id="@+id/disabled_text_views_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Disabled text views" />

        <Switch
            android:id="@+id/programmatically_styled_text_views_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Programmatically styled text views" />

        <LinearLayout
            android:id="@+id/text_view_types"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/enabled_text_views"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x2"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextStyle.Flamingo.Headline1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Headline1 Bold" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextStyle.Flamingo.Headline2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Headline2 Bold" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextStyle.Flamingo.Headline3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Headline3 Black" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextStyle.Flamingo.Headline4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Headline4 Bold" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextStyle.Flamingo.Headline5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Headline5 Bold" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextStyle.Flamingo.Headline6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Headline6 Bold" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextStyle.Flamingo.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Body1 Regular" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextStyle.Flamingo.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Body2 Regular" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextStyle.Flamingo.Subtitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subtitle1 Regular" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextStyle.Flamingo.Subtitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subtitle2 Medium" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextStyle.Flamingo.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Caption Regular" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextStyle.Flamingo.Overline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Overline Regular" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextStyle.Flamingo.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Button Medium" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/disabled_text_views"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextStyle.Flamingo.Headline1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Headline1 Bold" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextStyle.Flamingo.Headline2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Headline2 Bold" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextStyle.Flamingo.Headline3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Headline3 Black" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextStyle.Flamingo.Headline4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Headline4 Bold" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextStyle.Flamingo.Headline5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Headline5 Bold" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextStyle.Flamingo.Headline6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Headline6 Bold" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextStyle.Flamingo.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Body1 Regular" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextStyle.Flamingo.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Body2 Regular" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextStyle.Flamingo.Subtitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subtitle1 Regular" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextStyle.Flamingo.Subtitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subtitle2 Medium" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextStyle.Flamingo.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Caption Regular" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextStyle.Flamingo.Overline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Overline Regular" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextStyle.Flamingo.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Button Medium" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/programmatically_styled_text_views"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Headline1 Bold" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Headline2 Bold" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Headline3 Black" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Headline4 Bold" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Headline5 Bold" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Headline6 Bold" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Body1 Regular" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Body2 Regular" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subtitle1 Regular" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subtitle2 Medium" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Caption Regular" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Overline Regular" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Button Medium" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/single_line_text_views"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/x4"
            android:orientation="vertical">

            <include layout="@layout/font_divider" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/TextStyle.Flamingo.Headline1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Headline1 Bold" />

            <include layout="@layout/font_divider" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/TextStyle.Flamingo.Headline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Headline2 Bold" />

            <include layout="@layout/font_divider" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/TextStyle.Flamingo.Headline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Headline3 Black" />

            <include layout="@layout/font_divider" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/TextStyle.Flamingo.Headline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Headline4 Bold" />

            <include layout="@layout/font_divider" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/TextStyle.Flamingo.Headline5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Headline5 Bold" />

            <include layout="@layout/font_divider" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/TextStyle.Flamingo.Headline6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Headline6 Bold" />

            <include layout="@layout/font_divider" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/TextStyle.Flamingo.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Body1 Regular" />

            <include layout="@layout/font_divider" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/TextStyle.Flamingo.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Body2 Regular" />

            <include layout="@layout/font_divider" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/TextStyle.Flamingo.Subtitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subtitle1 Regular" />

            <include layout="@layout/font_divider" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/TextStyle.Flamingo.Subtitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subtitle2 Medium" />

            <include layout="@layout/font_divider" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/TextStyle.Flamingo.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Caption Regular" />

            <include layout="@layout/font_divider" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/TextStyle.Flamingo.Overline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Overline Regular" />

            <include layout="@layout/font_divider" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/TextStyle.Flamingo.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button Medium" />

            <include layout="@layout/font_divider" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>