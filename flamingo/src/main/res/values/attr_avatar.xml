<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Avatar">
        <attr name="ds_a_letters" format="string" />
        <attr name="ds_a_icon" format="reference" />
        <attr name="ds_a_drawable" format="reference" />

        <attr name="ds_a_background" format="reference" />
        <attr name="ds_a_size" format="enum">
            <enum name="size_24" value="1" />
            <enum name="SIZE_32" value="2" />
            <enum name="size_40" value="3" />
            <enum name="size_56" value="4" />
            <enum name="size_72" value="5" />
            <enum name="size_88" value="6" />
            <enum name="size_112" value="7" />
        </attr>
        <attr name="ds_a_shape" format="enum">
            <enum name="circle" value="1" />
            <enum name="roundedCornersSmall" value="2" />
            <enum name="roundedCornersMedium" value="3" />
            <enum name="roundedCornersBig" value="4" />
        </attr>

        <attr name="ds_a_disabled" format="boolean" />
    </declare-styleable>
</resources>