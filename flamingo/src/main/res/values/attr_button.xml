<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Button">
        <attr name="ds_b_label" format="string" />
        <attr name="ds_b_size" format="enum">
            <enum name="large" value="56" />
            <enum name="medium" value="40" />
            <enum name="small" value="32" />
        </attr>
        <attr name="ds_b_color" format="enum">
            <enum name="defaultColor" value="0" />
            <enum name="primary" value="1" />
            <enum name="warning" value="2" />
            <enum name="error" value="3" />
        </attr>
        <attr name="ds_b_icon" format="reference" />
        <attr name="ds_b_disabled" format="boolean" />
        <attr name="ds_b_loading" format="boolean" />
        <attr name="ds_b_dropdown" format="enum">
            <enum name="no" value="0" />
            <enum name="collapse" value="1" />
            <enum name="expand" value="2" />
        </attr>

        <attr name="ds_b_variant" format="enum">
            <enum name="text" value="0" />
            <enum name="contained" value="1" />
        </attr>
        <attr name="ds_b_singleLine" format="boolean" />
    </declare-styleable>
</resources>
